{
    "name": "electron-nextjs",
    "author": "Solt",
    "description": "My application description",
    "version": "0.1.0",
    "private": true,
    "main": "main.js",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "electron": "electron .",
        "start": "next start",
        "lint": "next lint",
        "deploy:osx": "electron-builder --mac",
        "deploy:win32": "electron-builder --win nsis:ia32",
        "deploy:win64": "electron-builder --win nsis:x64"
    },
    "dependencies": {
        "electron-serve": "^2.0.0",
        "next": "14.2.4",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "electron": "^31.0.1",
        "electron-builder": "^24.13.3",
        "eslint": "^8",
        "eslint-config-next": "14.2.4",
        "postcss": "^8",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    },
    "build": {
        "productName": "HelloElectron",
        "appId": "com.electron.app",
        "asar": true,
        "mac": {
            "target": [
                    "default"
                ]
        },
        "dmg": {
            "title": "HelloElectron"
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "buildResources": "./resources/installer/",
            "output": "./dist/",
            "app": "."
        }
    }
}
